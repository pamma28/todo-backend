  "paths": {
    "/todos/{id}": {
      "get": {
        "tags": ["Todos"],
        "description": "Get one Todo by id",
        "operationId": "getTodo",
        "security": [],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id Todo",
            "required": true,
            "type": "ID",
            "items": {
              "type": "string"
            },
            "collectionFormat": "multi"
          }
        ],
        "responses": {
          "200": {
            "description": "A list of todos.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/definitions/todosModel"
                }
              }
            }
          },
          "500": {
            "$ref": "#/definitions/errorRequest"
          }
        }
      }
    },
    "/todos": {
      "get": {
        "tags": ["Todos"],
        "description": "Returns all todos",
        "operationId": "getTodos",
        "security": [],
        "responses": {
          "200": {
            "description": "A list of todos.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "$ref": "#/definitions/todosModel"
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/definitions/errorRequest"
          }
        }
      },
      "post": {
        "tags": ["Todos"],
        "description": "Add todo list",
        "operationId": "addTodo",
        "security": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "allOf": [
                  { "$ref": "#/definitions/todosModel" },
                  {
                    "example": {
                      "description": "Mengerjakan Test",
                      "deadline": "2020-05-14",
                      "done": true
                    }
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Succesfully adding data."
          },
          "500": {
            "$ref": "#/definitions/errorRequest"
          }
        }
      },
      "put": {
        "tags": ["Todos"],
        "description": "Update Todo",
        "operationId": "updateTodo",
        "security": [],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id Todo",
            "required": true,
            "type": "ID",
            "items": {
              "type": "string"
            },
            "collectionFormat": "multi"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "allOf": [
                  {
                    "$ref": "#/definitions/todosModel"
                  },
                  {
                    "example": {
                      "description": "Mengerjakan tes lebih giat",
                      "deadline": "2020-05-14",
                      "done": true
                    }
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Successfully updating data."
          },
          "500": {
            "$ref": "#/definitions/errorRequest"
          }
        }
      },
      "delete": {
        "tags": ["Todos"],
        "description": "delete Todo ",
        "operationId": "deleteTodo",
        "security": [],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id Todo",
            "required": true,
            "type": "ID",
            "items": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Successfully deleting data."
          },
          "500": {
            "$ref": "#/definitions/errorRequest"
          }
        }
      }
    }
  },
  "definitions": {
    "todosModel": {
      "properties": {
        "description": {
          "type": "string",
          "description": "name todo"
        },
        "deadline": {
          "type": "string",
          "format": "date",
          "description": "date of deadline"
        },
        "done": {
          "type": "boolean",
          "description": "accomplished or not"
        }
      }
    },
    "errorRequest": {
      "description": "error request",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "error": {
                "type": "boolean",
                "description": "error"
              },
              "message": {
                "type": "string",
                "description": "error from system"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {}
  }
